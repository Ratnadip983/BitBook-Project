
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BitBook</title>
    <!-- Bootstrap -->
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen" />*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
    <link href="~/Content/customize.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" style="background-color: rgb(153, 179, 255);">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="@Url.Action("NewsFeed", "Users")">

                    <img src="~/img/logo.png" class="lgo img-rounded" style="margin-top:-2%; width:10%" />
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div>
            < class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                @using (@Html.BeginForm("Search", "Users", FormMethod.Post, new { @class = "navbar-form navbar-left" }))
                {
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-default">Search</button>


                }
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Me</a></li>
                    <li><a href="@Url.Action("NewsFeed","Users")"><span class="glyphicon glyphicon-home"></span></a></li>
                   <li><a href="@Url.Action("ReceivedRequests","Users")"><span class="glyphicon glyphicon-user"></span></a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-globe"></span></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Update Profile", "Edit", "Users")</li>
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Users")</li>
                            <li>@Html.ActionLink("Logout", "LogOff", "Users")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/nav.js"></script>
    <script src="~/Scripts/customize.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>



</body>
</html>
